<main class="container">
    <div class="d-flex justify-content-center">
        <a href="https://www.vecteezy.com/" target="_blank"><img src="burg.png" alt="Vectors by Vecteezy"
                style="max-height: 300px;"></a>
    </div>

    <h1>Eat-Da-Burger!</h1>
    <div class="row d-flex">
        <div class="col">
            <h2>Burgers Ready Ta Eat!</h2>

            <ul>
                {{#each burger}}
                {{#unless dataValues.devoured}}
                <li>
                    <form class="customer-form">
                        <label for="custName">{{dataValues.burgerName}}</label>
                        <input type="text" name="custName" placeholder="Customer Name" text="">
                        <button class="eatBtn btn btn-danger" id="{{dataValues.id}}">Devour It!</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <h2>Burgers Gone From Dis World!</h2>

            <ul>
                {{#each burger}}
                {{#if dataValues.devoured}}
                <li>
                    {{dataValues.burgerName}} devoured by {{dataValues.customerName}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div>
        <h2>Add Da Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <input type="text" class="form-control" id="burg" name="name" placeholder="Burger Name">
            </div>

            <button type="submit" class="btn btn-primary">Add Burger</button>
        </form>
    </div>
</main>